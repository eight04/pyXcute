[MESSAGES CONTROL]
disable=
	# https://github.com/PyCQA/pylint/issues/1368
	bad-whitespace,
	
	design,
	
	missing-docstring,
	trailing-whitespace,
  import-outside-toplevel

[BASIC]
variable-rgx=^[a-z_]{1,}$
function-rgx=^[a-z_]{1,}$
const-rgx=^(?P<snake_case>[a-z_]{3,})|(?P<UPPER_CASE>[A-Z_]{3,})$

[FORMAT]
indent-string="    "
